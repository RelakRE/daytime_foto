<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transitions_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_change_bounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ChangeBounds" />
    <Button
        android:id="@+id/button_fade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fade" />
    <Button
        android:id="@+id/button_transition_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TransitionSet" />
    <Button
        android:id="@+id/button_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slide" />
    <Button
        android:id="@+id/button_explode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explode" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Transitions example"
        android:visibility="gone" />
</LinearLayout>